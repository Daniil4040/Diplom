<%= paginate @films, window: 1 %>
<% @films.each do |film| %>
    <div class="info_film">
        <% if film.poster.attached? %>
            <%= image_tag film.poster %>
        <% else %>
        <% end %>
        <%= film.description.truncate(270) %>
        <div class="button"><%= link_to "Смотреть", film %></div>
    </div>
<% end %>
<%= paginate @films, window: 1 %>